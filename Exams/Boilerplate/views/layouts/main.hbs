<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
  </head>
  <body>
    {{#if errors}}
      <div>
        {{#each errors}}
          <p>{{this}}</p>
        {{/each}}
      </div>
    {{/if}}
    <a href="/auth/login">Login</a>
    <a href="/auth/register">Register</a>
    <a href="/auth/logout">Logout</a>
    {{{body}}}
  </body>
</html>