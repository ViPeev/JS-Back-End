<section class="details-page">
  <h1>Details</h1>
  <article class="details-card">
    <article class="details-card-text">
      <h2>Title:<br />{{review.title}}</h2>
      <h3>Author: {{review.author}}</h3>
      <h3>Stars: {{review.stars}}</h3>
      <h3>Genre: {{review.genre}}</h3>
      <h3>Review:
        {{review.review}}
      </h3>

      <!-- If there is no registered user, do not display buttons-->
      {{#if user}}
        <div class="buttons">
          <!-- Only for registered user and author of the review -->
          {{#if isOwner}}
            <a href="/details/{{review._id}}/edit" class="btn-edit">Edit</a>
            <a
              href="/details/{{review._id}}/delete"
              class="btn-delete"
            >Delete</a>
          {{else}}
            {{#if isWished}}
              <p class="wish-pub">You already added the book to your wish list</p>
            {{else}}
              <a href="/details/{{review._id}}/wish" class="btn-wish">Wish to
                read</a>
            {{/if}}
          {{/if}}
          <!-- logged in user who has not yet wished book-->
          <!-- logged in user who has already wished book-->
        </div>
      {{/if}}

    </article>

    <article class="details-card-image">
      <img src="{{review.image}}" />
    </article>
  </article>
</section>