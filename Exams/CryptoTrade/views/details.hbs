<section id="details-info">
  <h1>Details</h1>
  <div class="coin-image">
    <img src="{{offer.image}}" />
  </div>

  <div class="coin-info">
    <div class="coin-text">
      <h1 id="name">{{offer.name}}</h1>
      <h3 id="payment">Payment method: {{offer.payment}}</h3>
      <p id="price"><span>Price: ${{offer.price}}</span></p>
      <p id="description">{{offer.description}}</p>
    </div>

    {{#if user}}
      <div class="product-btn">
        {{#if isOwner}}
          <div class="author">
            <a href="/details/{{offer._id}}/edit" class="btn-edit">Edit</a>
            <a
              href="/details/{{offer._id}}/delete"
              class="btn-delete"
            >Delete</a>
          </div>
        {{else}}
          {{#if isWished}}
            <p class="buy-message">You already bought these crypto coins.</p>
          {{else}}
            <a href="/details/{{offer._id}}/wish" class="btn-buy">Buy</a>
          {{/if}}
        {{/if}}
      </div>
    {{/if}}

  </div>
</section>