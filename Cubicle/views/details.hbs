{{#with cube}}
<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}"/>
<div class="details">
  <p><span>Description:</span>
    {{description}}</p>
  <p><span>Difficulty level:</span>{{diffLevel}}</p>
  <a class="btn" href="/">Back</a>
  {{#if isOwner}}
  <a class='btn' href="/attach/accessory/{{_id}}">Attach</a>
  <a class="btn" href="/edit/{{_id}}">Edit</a>
  <a class="btn" href="/delete/{{_id}}">Delete</a>
  {{/if}}
</div>
{{/with}}
<h2>Accessories</h2>
<div class="accessories">
{{#if cube.accessories}}
{{#each cube.accessories}}
{{>accessory}}
{{/each}}
{{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    {{/if}}
</div>

            