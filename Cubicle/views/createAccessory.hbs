<h1>Create Accessory</h1>
<div class="form">
  <form action="/create/accessory" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{body.name}}" required />
    <label for="name">Description</label>
    <textarea id="description" name="description" required>{{body.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{body.imageUrl}}" required/>
    <input type="submit" value="Create" />
  </form>
</div>